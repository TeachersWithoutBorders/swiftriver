<div id="report">
    <img src="<%=report.reporter.icon%>" class="profile">
    <%=report.reporter.name%>: <%=report.text%><br/>
    <span class="whenwhere">
      <%=time_ago_in_words(report.created_at)%> ago
      <%="in #{report.location.address}" if report.location%>
      via <%=report.reporter.source_name%>
    </span>
</div>