%table[report]
  %tbody
    %tr
      %td.image= image_tag(report.reporter.icon, :class => "profile")
      %td.author
        %span{ :class => "author vcard"}
          =h report.reporter.name
          %br
          =h report.reporter.uniqueid
          %br
          - if report.location
            in
            %span{ :class => "adr" }= report.location.address if report.location
          via 
          =report.reporter.source_name
      %td.text
        %p
          = report.text
        %p
          %label Wait
          = display( report.wait_time )
          %label Tags
          = display( report.tags.join(', ') )
          %label Location
          = display( report.location.to_s )
      %td.controls
        = link_to_remote 'Edit', { :url => edit_report_path(report), :method => :get }
        = link_to_remote 'Dismiss', { :url => dismiss_report_path(report), :method => :post, :confirm => 'Are you SURE this is a bogus report?' }
        = link_to_remote 'Confirm', { :url => confirm_report_path(report), :method => :post }